@{
    ViewData["Title"] = "What you will need";

    await Html.RenderPartialAsync("Components/ViewBackLink");

    var applicationId = Context.Request.Query["ApplicationId"];
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Additional supporting evidence</h1>

        <p class="govuk-body">You'll need give us:</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>any additional supporting evidence</li>
        </ul>

        <div class="govuk-button-group">
            <a href="@UrlKeys.SupportingEvidenceAdd?ApplicationId=@applicationId" class="govuk-button">Continue</a>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("Components/ViewReturnToApplicationLink", applicationId);
}
