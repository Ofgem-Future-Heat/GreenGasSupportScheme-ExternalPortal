    {
        <li class="nav-item">
            <span class="navbar-text text-dark" style="color:#000;">Hello @User.GetDisplayName()!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/dashboard">My dashboard</a>
        
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/dashboard">Sign in</a>
        </li>
    }
</ul>
