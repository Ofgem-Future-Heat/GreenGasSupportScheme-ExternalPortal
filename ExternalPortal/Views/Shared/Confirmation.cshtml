@model ConfirmationViewModel

@{
    ViewData["Title"] = "Stage One - Confirmation";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@Model.PageHeading.Heading</h1>
        </div>

        <p>
            @Model.ConfirmationText
        </p>

        <h2 class="govuk-heading-m">@Model.PageHeading.SubHeading</h2>

        <p>
            @Model.PageHeading.SuperHeading
        </p>

        @if (Model.BackLink != null)
        {
            <p>
                <a href="@Model.BackAction" class="govuk-link">Return to your application</a>
            </p>
        }

    </div>
</div>

