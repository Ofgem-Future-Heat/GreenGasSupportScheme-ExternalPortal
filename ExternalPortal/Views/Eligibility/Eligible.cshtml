@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "You might meet the eligibility requirements - Check eligibility - Green Gas Support Scheme";
    
    var signupUrl = Configuration.GetValue<string>("AzureAdB2C:SignUpUrl");

    await Html.RenderPartialAsync("Components/ViewBackLink");
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div>
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">You might meet the eligibility requirements</h1>
                    </legend>

                    <p>You can apply for financial support to inject biomethane into the gas grid.</p>
                    <p>
                        This checker does not guarantee that any application you make will be successful.
                    </p>

                    <p>
                        <strong>
                            What you should do next
                        </strong>
                    </p>
                    <p>
                        To be able to make an application, you need to create an applicant account. This will allow you to:
                    </p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>save your application and return to it later</li>
                        <li>check the progress of your application</li>
                    </ul>
                </fieldset>
            </div>
        </div>

        <div class="govuk-button-group">
            <a href="@signupUrl" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" data-module="govuk-button">
                Create an account
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                </svg>
            </a>
        </div>
    </div>
</div>