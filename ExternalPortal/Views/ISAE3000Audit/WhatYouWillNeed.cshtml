@{
    ViewData["Title"] = "What documentation you will need - Green Gas Support Scheme";

    await Html.RenderPartialAsync("Components/ViewBackLink");

    var applicationId = Context.Request.Query["ApplicationId"];
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">What documentation you will need</h1>

        <p class="govuk-body">
            You'll need to show us:
            <ul class="govuk-list govuk-list--bullet">
                <li>your International Standard on Assurance Engagements (ISAE) 3000 audit document</li>
            </ul>

            <div class="govuk-button-group">
                <a href="@UrlKeys.Isae3000Upload?ApplicationId=@applicationId" class="govuk-button">Continue</a>
            </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("Components/ViewReturnToApplicationLink", applicationId);
}
