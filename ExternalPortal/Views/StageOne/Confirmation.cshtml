@model ExternalPortal.ViewModels.InstallationModel

@{
    ViewData["Title"] = "Stage One - Confirmation";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">Stage 1 complete</h1>
        </div>

        <p>
            We've received your application and sent you a confirmation email.
        </p>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p>
            We'll contact you to confirm your registration, or to ask for more information.
        </p>

        @if (Model.BackLink != null)
        {
            await Html.RenderPartialAsync("Components/ReturnToYourApplication", Model.BackLink);
        }

    </div>
</div>

